<h1><%= _("New message") %></h1>

<% form_for(@message, :url => user_messages_path(params[:user_id])) do |f| %>
  <%= f.error_messages %>
  <div class="form-item">
    <%= f.label :body, _("Body") %><br />
    <%= f.text_area :body %><hr/>
  </div>
  <div class="form-item">
    <%= f.submit _('Send') %><hr/>
  </div>
<% end %>
