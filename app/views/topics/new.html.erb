<div class="crumbs" xstyle="margin-top:1.1em;">
  <%= link_to 'Forums', forums_path %> &raquo;
  <%= link_to h(@forum.name), forum_path(@forum) %> &raquo;
</div>


<h1 id="new_topic"><%= 'New Topic' %></h1>

<%= error_messages_for :topic %>
<% form_for :topic,
     :url  => topics_path(@forum) do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag _('Save'), :or => link_to('Cancel', forum_path(@forum)) %>
<% end -%>

