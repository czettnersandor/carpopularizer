<p>
<label for="topic_title"><%= _('Title') %></label><br />
<%= form.text_field :title %>
</p>

<div class="form-item"><label for="body"><%=_('Body')%></label><br/>
<%= form.text_area :body %><hr/></div>

<% if not @topic.new_record? %>
<p id="topic_forum_id">
  <label for="topic_forum_id"><%= 'Forum'[:forum_title] %></label><br />
  <%= form.select :forum_id, Forum.find(:all, :order => "position").map {|x| [x.name, x.id] } %></p>
<% end %>