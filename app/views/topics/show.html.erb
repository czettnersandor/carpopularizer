<div class="crumbs" xstyle="margin-top:1.1em;">
  <%= link_to 'Forums', forums_path %> &raquo;
  <%= link_to h(@forum.name), forum_path(@forum) %> &raquo;
</div>

<h1><%= @topic.title %></h1>
<p class="description"><%= @topic.body %></p>

<div id="reply" class="editbox">
  <div class="container">
    <%= content_tag 'p', h(flash[:bad_reply]), :class => 'notice' if flash[:bad_reply] %>
    <% form_for :comment, :url => comments_path(:forum_id => @forum, :topic_id => @topic) do |f| -%>

      <%= f.text_area :body, :rows => 8 %>

      <%= submit_tag "Save Reply" %><span class="button_or">or <%= link_to_function 'cancel', "$('reply').hide()" %></span>

    <% end -%>
  </div>
</div>

<%= will_paginate @comments %>
<% @comments.each do |comment| %>

  <div class="comment">
    <%= comment.body %>
    <%= comment.user.name %>
    <%= image_tag comment.user.avatar.url(:thumb) %>
  </div>

<% end %>

<%= will_paginate @comments %>
