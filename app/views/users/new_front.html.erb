<div id="register-wrapper" class="grid_12 alpha omega">
  <h2>-<%= " a vezető közösség" %></h2>
  <div id="register-left">
    <p><%= _("Boxutca.com connects car fans, car owners and car fanatics!") %></p>
    <p><%= _("Create your own profile with your cars, friends and pictures. Share your thoughts with your friends. Discover what others doing right now. Challenge for a battle, vote for them or just browse and enjoy the cars on boxutca.com.") %></p>
    <p><%= _("Follow the latest news, join clubs, upload your ads or search the cars for sale section and find the ride you’ve always wanted.") %></p>
    <p><%= _("Let’s do it together freely on boxutca.com.") %></p>
  </div>

  <%= error_messages_for :user %>
  <% form_for :user, :url => new_user_path, :html => { :class => "user-register" } do |f| -%>
    <h3><%= _("Register on boxutca.com") %></h3>
    <div class="form-item select">
      <label for="usertype"><%=_('Registration type')%></label><br/>
      <%= f.select('usertype',
        options_for_select({_("User")=>0, _("Dealer")=>1})) %>
      <hr/>
    </div>

    <div class="form-item"><label for="email"><%=_('Email')%></label><br/>
      <%= f.text_field :email %><hr/></div>

    <div class="form-item"><label for="password"><%=_('Password')%></label><br/>
      <%= f.password_field :password %><hr/></div>

    <div class="form-item"><%= submit_tag _('Register') %><hr/></div>
  <% end -%>

</div>

