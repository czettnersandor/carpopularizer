<%= error_messages_for :user %>
<% form_for @user, :url => users_path, :html => { :class => "user-register" } do |f| -%>
  <div class="form-item"><label for="login"><%=_('Nickname')%></label><br/>
    <%= f.text_field :login %><hr/></div>

  <div class="form-item"><label for="email"><%=_('Email')%></label><br/>
    <%= f.text_field :email %><hr/></div>

  <div class="form-item"><label for="password"><%=_('Password')%></label><br/>
    <%= f.password_field :password %><hr/></div>

  <div class="form-item"><label for="password_confirmation"><%=_('Confirm Password')%></label><br/>
    <%= f.password_field :password_confirmation %><hr/></div>

  <div class="form-item select">
    <label for="usertype"><%=_('Registration type')%></label><br/>
    <%= f.select('usertype',
      options_for_select({_("User")=>0, _("Dealer")=>1})) %>
    <hr/>
  </div>
  
  <div class="form-item captcha"><%= recaptcha_tags %></div>

  <div class="form-item"><%= submit_tag _('Register') %><hr/></div>
<% end -%>

