<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="<%=I18n.locale%>">

  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title><%= @title %> | Boxutca</title>
    <%= stylesheet_link_tag("reset") %>
    <%= stylesheet_link_tag("960") %>
    <%= stylesheet_link_tag("text") %>
    <%= stylesheet_link_tag("style") %>
    <%= javascript_include_tag 'jquery' %>
    <%= javascript_include_tag 'jquery-ui' %>
    <%= javascript_include_tag 'jrails' %>
    <%= javascript_include_tag 'jquery.validate' %>
    <%= javascript_include_tag 'jquery.maskedinput' %>
    <%= javascript_include_tag 'application' %>

  </head>
  <body>
    <div class="container_12">
      <div class="grid_12">

        <div id="langswitcher">
          <% for name, locale in [['Magyar',:hu],['English',:en]]
            localeactive = (I18n.locale == locale)? " active" : ""
          %>
            <%=link_to(name,current_url(:locale=>locale), :class => locale.to_s+localeactive)%>
          <% end %>
        </div>

        <a href="/" id="logo"></a>

        <div id="loginblock">
          <% if logged_in? %>
            <%= _('Welcome')+" "+link_to(current_user.login, '/profile') %>
            <%= link_to(_("Logout"), "/logout") %>
          <% else %>
            <%= render :partial => "layouts/login" %>
          <% end %>

          <% if flash[:login_message] %>
            <%=flash[:login_message]%>
          <%end%>
        </div>

      </div>
      <div class="grid_12" id="content-wrapper">
        <div id="headcurve"></div>
        <% if flash[:notice] %>
          <%=flash[:notice]%>
        <%end%>

        <h1 class="title"><%= @title  %> </h1>
        <%= yield %>

        <div id="footercurve"></div>
      </div>
    </div>
  </body>
</html>
