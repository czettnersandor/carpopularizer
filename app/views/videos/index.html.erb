<h1>Listing videos</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Title</th>
    <th>Body</th>
    <th>User id</th>
    <th>Hits</th>
  </tr>

<% @videos.each do |video| %>
  <tr>
    <td>
      <%= image_tag "http://img.youtube.com/vi/"+video.video_id+"/2.jpg", :with=>120, :height=>90 %>
    </td>
    <td><%=h video.title %></td>
    <td><%=h video.body %></td>
    <td><%=h video.user_id %></td>
    <td><%=h video.hits %></td>
    <td><%= link_to 'Show', video %></td>
    <td><%= link_to 'Edit', edit_video_path(video) %></td>
    <td><%= link_to 'Destroy', video, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New video', new_video_path %>