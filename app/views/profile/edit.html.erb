<h1>Profile#index</h1>

<% if flash[:error] %>
  <%=flash[:error]%>
<%end%>

<%= error_messages_for :user %>
<% form_for :user, :url => '/profile/update', :html => { :class => "user-profile", :multipart => true } do |f| -%>

  <div class="grid_3 alpha">
    <h3 class ="blocktitle">Alapadatok</h3>
    <div class="form-item"><label for="password"><%=_('Password')%></label><br/>
      <%= f.password_field :password %><hr/></div>

    <div class="form-item"><label for="password_confirmation"><%=_('Confirm Password')%></label><br/>
      <%= f.password_field :password_confirmation %><hr/></div>

    <div class="form-item"><label for="nem"><%=_('Gender')%></label><br/>
      <%= f.select :nem, "<option value=1>"+_('Male')+"</option><option value=2>"+_('Female')+"</option>"%><hr/></div>

    <div class="form-item"><label for="country"><%=_('Country')%></label><br/>
      <%= f.select :country, countrylist %><hr/></div>

    <div class="form-item"><label for="city"><%=_('City')%></label><br/>
      <%= f.text_field :city %><hr/></div>

    <div class="form-item"><label for="avatar"><%=_('Avatar')%></label><br/>
      <%= f.file_field :avatar %><hr/></div>


  </div>

  <div class="grid_3 alpha">
    <h3 class ="blocktitle">Tov√°bbi adatok</h3>

    <div class="form-item"><label for="name"><%=_('Full name')%></label><br/>
      <%= f.text_field :name %><hr/></div>

    <div class="form-item"><label for="birth"><%=_('Birth date')%></label><br/>
      <%= f.text_field :birth %><hr/></div>

    <div class="form-item"><label for="zip"><%=_('ZIP')%></label><br/>
      <%= f.text_field :zip %><hr/></div>

    <div class="form-item"><label for="address"><%=_('Address')%></label><br/>
      <%= f.text_field :address %><hr/></div>

    <div class="form-item"><label for="phone"><%=_('Phone number')%></label><br/>
      <%= f.text_field :phone %><hr/></div>

    <div class="form-item"><label for="langs"><%=_('Languages spoken')%></label><br/>
      <%= f.text_field :langs %><hr/></div>

    <div class="form-item"><label for="about"><%=_('About Me')%></label><br/>
      <%= f.text_area :about %><hr/></div>

    <div class="form-item"><%= submit_tag _('Save') %></div>
  </div>

<% end -%>
